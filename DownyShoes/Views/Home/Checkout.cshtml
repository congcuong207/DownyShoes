<div class="ads-grid_shop">
    <div class="shop_inner_inf">
        <div class="privacy about">
            <h3>Chec<span>kout</span></h3>

            <div class="checkout-right">

                <table class="timetable_sub">
                    <thead>
                        <tr>
                            <th>SL No.</th>
                            <th>Product</th>
                            <th>Quality</th>
                            <th>Product Name</th>

                            <th>Price</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int stt = 0;
                            if (Session["GioHang"] != null)
                            {
                                foreach (var item in Model)
                                {
                                    stt++;

                                    tongtien += item.Gia*item.Soluong;
                                    <tr class="rem1">
                                        <td class="invert">@stt</td>
                                        <td width="500" class="invert-image"><a href="@Url.Action("SingleProduct", "Home", new {id=item.Id})"><img src="@item.Hinhanh" alt=" " class="img-responsive"></a></td>
                                        <td class="invert">
                                            <div class="quantity">
                                                <div class="quantity-select">
                                                    <a href="@Url.Action("GiamSoLuong", "Home", new {id = item.Id})" class="entry value-minus"></a>
                                                    <div class="entry value"><span>@item.Soluong</span></div>
                                                    <a href="@Url.Action("TangSoLuong", "Home", new {id = item.Id})" class="entry value-plus active"></a>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="invert">@item.Tensanpham</td>

                                        <td class="invert">@string.Format("{0:#,##0}", item.Gia) VNĐ</td>
                                        <td class="invert">
                                            <div class="rem">
                                                <a href="@Url.Action("XoaCart", "Home", new {id = item.Id})" class="close1"> </a>
                                            </div>

                                        </td>
                                    </tr>
                                }
                            }
                        }



                    </tbody>
                </table>
            </div>
            <h4>Tổng tiền hóa đơn: <span> @string.Format("{0:#,##0}",tongtien) VNĐ </span></h4>
        </div>
    </div>
    <!-- //top products -->
    <!-- /newsletter-->
    <div class="newsletter_w3layouts_agile">
        <div class="col-sm-6 newsleft">
            <h3>Sign up for Newsletter !</h3>
        </div>
        <div class="col-sm-6 newsright">
            <form action="#" method="post">
                <input type="email" placeholder="Enter your email..." name="email" required="">
                <input type="submit" value="Submit">
            </form>
        </div>

        <div class="clearfix"></div>
    </div>
