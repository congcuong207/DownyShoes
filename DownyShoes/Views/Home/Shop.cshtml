@using PagedList.Mvc;
@model PagedList.IPagedList<DownyShoes.Models.GIAY>
@using DownyShoes.Models
@{
    DBContext db = new DBContext();
    List<DownyShoes.Models.LoaiGiay> loaiGiays = db.LoaiGiays.ToList();

}

<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/shoppingcart.js"></script>

<div class="ads-grid_shop">
        <div class="shop_inner_inf">
        <!-- tittle heading -->
        <!-- //tittle heading -->
        <!-- product left -->
        <div class="side-bar col-md-3">
            <div class="search-hotel">
                <h3 class="agileits-sear-head">Search Here..</h3>
                <form action="" method="post">
                    <input type="search" placeholder="Product name..." name="search" required="">
                    <input type="submit" value=" ">
                </form>
            </div>
            <div class="list-group">
                <a href="@Url.Action("Shop", "Home", new {id=0})" class="list-group-item list-group-item-action list-group-item-danger">
                    Danh Mục
                </a>
                @foreach (var item in loaiGiays)
                {

                    <a href="@Url.Action("Shop","Home",new { id=item.ID})" class="list-group-item list-group-item-warning">@item.NAME</a>

                }


            </div>

            <!--preference -->


        </div>
        <!-- //product left -->
        <!-- product right -->
        <div class="left-ads-display col-md-9" ng-app="Cart">
            <div class="wrapper_top_shop" ng-controller="CartController">
                <div class="col-md-6 shop_left">
                    <img src="~/Content/images/banner3.jpg" alt="">
                    <h6>40% off</h6>
                </div>
                <div class="col-md-6 shop_right">
                    <img src="~/Content/images/banner2.jpg" alt="">
                    <h6>50% off</h6>
                </div>
                <div class="clearfix"></div>
                <!-- product-sec1 -->
                <div class="product-sec1">
                    <!--/mens-->
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 product-men">
                            <div class="product-shoe-info shoe">
                                <div class="men-pro-item">
                                    <div class="men-thumb-item">
                                        <img height="350" width="300" src="@item.IMAGE" alt="">
                                        <div class="men-cart-pro">
                                            <div class="inner-men-cart-pro">
                                                <a href="@Url.Action("SingleProduct","Home",new {id=item.ID})" class="link-product-add-cart">Quick View</a>
                                            </div>
                                        </div>
                                        <span class="product-new-top">New</span>
                                    </div>
                                    <div class="item-info-product">
                                        <h4>
                                            <a href="@Url.Action("SingleProduct","Home",new {id=item.ID})">@item.NAME </a>
                                        </h4>
                                        <div class="info-product-price">
                                            <div class="grid_meta">
                                                <div class="product_price">
                                                    <div class="grid-price ">
                                                        <p class="card-text">@string.Format("{0:#,##0}", @item.COST) VNĐ </p>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="shoe single-item hvr-outline-out">
                                                <form action="#" method="post">
                                                    <input type="hidden" name="cmd" value="_cart">
                                                    <input type="hidden" name="add" value="1">
                                                    <input type="hidden" name="shoe_item" value="@item.NAME">
                                                    <input type="hidden" name="amount" value="@item.COST">

                                                    <button ng-click="AddGioHang('@item.ID')" type="submit" class="shoe-cart pshoe-cart">
                                                        <i class="fa fa-cart-plus" aria-hidden="true"></i>
                                                    </button>


                                                    <a href="#" data-toggle="modal" data-target="#myModal1"></a>
                                                </form>

                                            </div>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                    <!-- //mens -->
                    <div class="clearfix"></div>

                </div>
                <br />
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

                @Html.PagedListPager(Model, page => Url.Action("Shop",
                    new
                    {
                        page = page

                    }))

                <!-- //product-sec1 -->
                <div class="col-md-6 shop_left shp">
                    <img src="~/Content/images/banner4.jpg" alt="">
                    <h6>21% off</h6>
                </div>
                <div class="col-md-6 shop_right shp">
                    <img src="~/Content/images/banner1.jpg" alt="">
                    <h6>31% off</h6>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
